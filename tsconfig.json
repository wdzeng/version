{
  "compilerOptions": {
    // Environment and module options.
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": [
      "ES2022"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    // Type checking options.
    "strict": true,
    "alwaysStrict": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}
